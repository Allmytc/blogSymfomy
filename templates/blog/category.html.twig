{% extends 'base.html.twig' %}

{% block title %}

    All articles

{% endblock %}

{% block body %}

    <h1>All articles from Javascript category : </h1>
    {% for article in articles %}
        <div>
            <h2>
                <a href="{{ path('article_show', {'slug' : article.slug}) }}">
                    {{ loop.index }}
                </a>
                / {{ article.title }} -
                Category : <a href="/category/{{ category.name }}">{{ category.name }}</a>
            </h2>
            <p>{{ article.content }}</p>
        </div>
    {% else %}
        Aucun article trouv√©.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>

{% endblock %}