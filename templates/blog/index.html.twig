{% extends 'base.html.twig' %}

{% block title %}All articles{% endblock %}

{% block body %}
    <h1>All articles from article s table : </h1>
    <div class="row d-flex justify-content-around">
        {% for article in articles %}
            <div class="card col-3 mb-2">
                <div class="card-body">
                    <h5 class="card-title">{{ article.title }}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">By {{ article.author.email }}</h6>
                    <p class="card-text">{{ article.content }}</p>
                    <a href="{{ path('article_show', {'slug' : article.slug}) }}" class="card-link">Lire Article</a>
                    <a href="{{ path('show_category', {'name' : article.category.name}) }}" class="card-link">{{ article.category.name }}</a>
                </div>
            </div>
            {% if (loop.index) % 3 == 0 %}
                </div>

                <div class="row row d-flex justify-content-around">
            {% endif %}
        {% else %}
            Aucun article trouv√©.
        {% endfor %}
    </div>
    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>
{% endblock %}
